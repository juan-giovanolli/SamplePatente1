<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sulti.samplepatente1.ResultActivity"
    tools:showIn="@layout/activity_result">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/car_picture"
            android:layout_marginTop="40dp"/>
        <TextView
            android:text="@string/car_lbl"
            android:id="@+id/car_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_picture"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:text="@string/car_data_default"
            android:id="@+id/car_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_lbl"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:text="@string/owner_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_data"
            android:id="@+id/owner_lbl"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:text="@string/owner_data_default"
            android:id="@+id/owner_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/owner_lbl"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
